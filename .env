# Cấu hình cơ sở dữ liệu MySQL
MYSQL_DATABASE=pmls_db
MYSQL_USER=pmls_user
MYSQL_PASSWORD=pmls_password
MYSQL_ROOT_PASSWORD=root_password

# Cấu hình ứng dụng Spring Boot
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Cấu hình JVM
JAVA_OPTS=-Xmx512m -Xms256m

# Cấu hình vị trí lưu dữ liệu trên máy host
HOST_MYSQL_DATA_PATH=./docker/mysql-data 